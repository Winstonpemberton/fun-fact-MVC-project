
<form action='/fact/comments/delete' method="post">
  <input type="hidden" name="_method" value="delete" >
  <h1><%=@fact.title%></h1>
  <img src="<%=@fact.image_url%>" alt="fact's image">
  <p><%=@fact.description%></p>

  <h2>Comments</h2>

  <% @fact.comments.each do |comment| %>
    <%if comment.user_id == @current_user.id%>
    <%=@current_user.username%>: <%=comment.text %>
    <input type="checkbox" id="<%=comment.id%>" name="comment" value="<%=comment.id%>"><br><br>
    <%end%>
  <%end%>

  <input type="submit" value="submit">

</form>

<a class="button" href="/categories">Categories</a><br>
<a class="button" href="/account">Account</a><br>
<a class="button" href="/logout">Logout</a><br>
